{
  "debug.console.fontSize": 14,
  "diffEditor.ignoreTrimWhitespace": false,

  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "BerkeleyMono Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": true,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "files.autoSaveDelay": 10,
  "files.autoSave": "afterDelay",

  "git.openRepositoryInParentFolders": "never",

  "makefile.configureOnOpen": false,

  "notebook.lineNumbers": "on",

  "terminal.integrated.fontFamily": "JetBrainsMonoNL Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.fontWeight": "normal",

  // "window.autoDetectColorScheme": true,
  "window.titleBarStyle": "custom",
  "workbench.editor.empty.hint": "hidden",
  "workbench.preferredDarkColorTheme": "Gruvbox Material Dark",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",

  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
  },

  "python.analysis.typeCheckingMode": "standard",
  "go.toolsManagement.autoUpdate": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "git.blame.statusBarItem.enabled": true,
  "redhat.telemetry.enabled": false,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "terminal.integrated.suggest.enabled": false,
  "terminal.integrated.suggest.inlineSuggestion": "off",
  "workbench.colorTheme": "Tokyo Night",
  "chat.viewSessions.orientation": "stacked",
  "cSpell.enabled": true,
  "cSpell.language": "en-GB",
  "cSpell.customDictionaries": {
    "custom-dictionary-user": {
      "name": "custom-dictionary-user",
      "path": "~/.cspell/custom-dictionary-user.txt",
      "addWords": true,
      "scope": "user"
    }
  },
}
