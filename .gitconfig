[user]
	name = Anirudh Sudhir
	email = anirudh.sudhir1@gmail.com
	signingkey = ~/.ssh/id_rsa.pub
[init]
	defaultBranch = main
[color]
	ui = auto
[pull]
	rebase = true
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	format = ssh
[commit]
  gpgSign = true
